{% extends 'base.html.twig' %}
{% block title %}Details Ticket{% endblock %}





{% block body %}

<!-- page content -->
<div class="">
    <div class="page-title">
    <div class="title_left">
        <h3>My Ticket</h3>
    </div>

                <div class="title_right">
                    <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                        <button type="button" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#deleteTicketModal{{ ticket.id }}">
                            Supprrimer
                        </button>
                            {% include 'components/delete_modal.html.twig' with {
                            'modalId': 'deleteTicketModal' ~ ticket.id,
                            'modalTitle': 'Confirm Deletion',
                            'modalMessage': 'Are you sure you want to delete this file? This action cannot be undone.',
                            'actionPath': path('user_delete_ticket', { 'id': ticket.id }),
                            'confirmButtonText': 'Delete'
                        } %}
                    </div>
                </div>

    </div>

    <div class="clearfix"></div>

    <div class="row">
    <div class="col-md-12 col-sm-12 ">
        <div class="x_panel">
        <div class="x_title">
            <h2>My Ticket</h2>
            <ul class="nav navbar-right panel_toolbox">
            <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
            </li>
            </ul>
            <div class="clearfix"></div>
        </div>
    <div class="x_content">
        <div class="row">
            <div class="col-sm-12">
            <div class="card-box table-responsive">
                <p class="text-muted font-13 m-b-30"> 
                <strong>Title</strong> : {{ ticket.title }}                
                </p>	
                <p class="text-muted font-13 m-b-30"> 
                <strong>Description</strong>: {{ ticket.Description }}                
                </p>
                <p class="text-muted font-13 m-b-30"> 
                <strong>Priority</strong>: {{ ticket.priority }}                 
                </p>
                <p class="text-muted font-13 m-b-30"> 
                <strong>Cate</strong> : {{ ticket.category.name}}               
                </p>
                <p class="text-muted font-13 m-b-30"> 
                <strong>Created at</strong> : {{ ticket.createdAt|date('Y-m-d H:i')}}                   
                </p>	
            </div>
            </div>
        </div>
    </div>
        </div>

        {# Attachments #}
            <div class="row">
                <div class="col-md-12 col-sm-12 ">
                    <div class="x_panel">
                    <div class="x_title">
                        <h2>Attachements</h2>
                        <ul class="nav navbar-right panel_toolbox">
                        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="card-box table-responsive">
                        <p class="text-muted font-13 m-b-30">                    
                        </p>
                        <table id="datatable" class="table table-striped table-bordered" style="width:100%">
                        <thead>
                            <tr>
                            <th>Title</th>
                            <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for attachment in ticket.attachments %}
                            <tr>
                                <td>{{ attachment.fileName }}</td>
                                <td>
                                <a href="{{ asset('/uploads/' ~ attachment.fileName) }}" target="_blank" class="btn btn-info btn-sm">View</a>
                                <button type="button" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#deleteAttachmentModal{{ attachment.id }}">
                                    Supprrimer
                                </button>
                                    {% include 'components/delete_modal.html.twig' with {
                                    'modalId': 'deleteAttachmentModal' ~ attachment.id,
                                    'modalTitle': 'Confirm Deletion',
                                    'modalMessage': 'Are you sure you want to delete this file? This action cannot be undone.',
                                    'actionPath': path('user_delete_attachment', { 'id': attachment.id }),
                                    'confirmButtonText': 'Delete'
                                } %}
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                        </table>

                    </div>
                        {# Ajouter Attachment #}

                        <form method="POST" action="{{ path('user_inserer_attachment', { 'id': ticket.id }) }}" enctype="multipart/form-data">
                            <div class="form-group">
                                <label for="attachments">Add New Attachments</label>
                                <input type="file" name="attachments" id="attachments" class="form-control" required >
                            </div>
                            <button type="submit" class="btn btn-primary mt-2">Upload</button>
                        </form>
                    </div>
                </div>
                </div>
                </div>
            </div>
        </div>
        {# End Attachements #}

        {# Comments #}
        <!-- Comments -->
    {% include 'components/ticket_comments.html.twig' with { 'comments': comments, 'form': form } %}
      
        {# End Comments#}
    </div>
    </div>
        </div>
    </div>
    </div>
</div>
<!-- /page content -->
{% endblock %}