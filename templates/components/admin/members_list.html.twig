{% extends 'components/container.html.twig' %}

{% block title %}Admins & Supports{% endblock %}

{% block content %}
<div class="row d-flex justify-content-end mb-3">
    <!-- Button to redirect to Add Member page -->
    <a href="{{ path('admin_add_member') }}" class="btn btn-success">
        Add New Member
    </a>
</div>

<table 
        id="datatable-members"
        class="table table-striped table-bordered dt-responsive nowrap"
        cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>Email</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for member in members %}

            {% if member.id != app.user.id %}
                <tr>
                    <td>{{ member.email }}</td>
                    <td>{{ member.roles|join(', ') }}</td>
                    <td class="align-middle">
                        <a href="{{ path('admin_view_member', { 'id': member.id }) }}" class="btn btn-info btn-sm">
                            View Details
                        </a>
                    </td>
                </tr>
            {% endif %}
        {% endfor %}
    </tbody>
</table>
{% endblock %}

